# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{ts,tsx,js,html}]
max_line_length = 100

# PowerShell files
[*.{ps1, psm1, psd1}]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2