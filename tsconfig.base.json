{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular/*": ["./node_modules/@angular/*"],
      "@energinet-datahub/dh-app/core/feature-shell": [
        "libs/dh-app/core/feature-shell/src/index.ts"
      ],
      "@energinet-datahub/ett/core/feature-onboarding": [
        "libs/ett/core/feature-onboarding/src/index.ts"
      ],
      "@energinet-datahub/ett/core/feature-shell": [
        "libs/ett/core/feature-shell/src/index.ts"
      ],
      "@energinet-datahub/ett/dashboard/feature-shell": [
        "libs/ett/dashboard/feature-shell/src/index.ts"
      ],
      "@energinet-datahub/ett/shared/test-util-angular": [
        "libs/ett/shared/test-util-angular/src/index.ts"
      ],
      "@energinet-datahub/watt": ["libs/ui-watt/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
