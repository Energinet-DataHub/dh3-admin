{
  "projectType": "library",
  "root": "libs/ui-watt",
  "sourceRoot": "libs/ui-watt/src",
  "prefix": "watt",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/ui-watt"],
      "options": {
        "jestConfig": "libs/ui-watt/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/ui-watt/src/**/*.ts",
          "libs/ui-watt/src/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "port": 4400,
        "projectBuildConfig": "ui-watt:build-storybook",
        "uiFramework": "@storybook/angular",
        "config": {
          "configFolder": "libs/ui-watt/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/designsystem",
        "projectBuildConfig": "ui-watt:build-storybook",
        "uiFramework": "@storybook/angular",
        "config": {
          "configFolder": "libs/ui-watt/.storybook"
        },
        "assets": [
          {
            "input": "libs/ui-watt/src/assets",
            "glob": "**/*",
            "output": "assets/ui-watt"
          }
        ],
        "styles": ["libs/ui-watt/.storybook/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/ui-watt/src/lib/styles"]
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": ["product:watt", "type:ui"]
}
