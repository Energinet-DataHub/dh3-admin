{
  "$schema": "../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../../../dist/watt",
  "assets": [
    { "input": "assets", "glob": "**/*", "output": "assets" },
    {
      "input": "core/breakpoints",
      "glob": "**/*.scss",
      "output": "core/breakpoints"
    },
    { "input": "core/spacing", "glob": "**/*.scss", "output": "core/spacing" },
    {
      "input": "core/styles/@energinet-datahub/watt",
      "glob": "**/*.scss",
      "output": "core/styles/@energinet-datahub/watt"
    },
    {
      "input": "core/typography",
      "glob": "**/*.scss",
      "output": "core/typography"
    }
  ],
  "lib": {
    "entryFile": "index.ts"
  }
}
