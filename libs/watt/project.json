{
  "name": "watt",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/watt/src",
  "prefix": "watt",
  "tags": ["product:watt"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/watt"],
      "options": {
        "jestConfig": "libs/watt/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/watt",
        "command": "storybook dev --port 4400 --"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/watt",
        "command": "storybook build --output-dir ../../dist/storybook/my-app"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/watt/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "watt:build-storybook",
        "staticFilePath": "dist/designsystem",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "watt:build-storybook:ci"
        }
      }
    }
  }
}
