{
  "name": "watt",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/watt/src",
  "prefix": "watt",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/watt"],
      "options": {
        "jestConfig": "libs/watt/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "host": "localhost",
        "configDir": "libs/watt/.storybook",
        "browserTarget": "watt:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "./libs/watt/src/lib"]
      },
      "configurations": {
        "ci": {
          "quiet": true,
          "open": false
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "styles": ["libs/watt/.storybook/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/watt/src/lib/core/styles"]
        },
        "outputDir": "dist/designsystem",
        "configDir": "libs/watt/.storybook",
        "browserTarget": "watt:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "./libs/watt"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/watt/src/lib/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/watt/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/watt/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": ".",
        "commands": [
          "nx build watt",
          "cd dist/watt && npm pack --pack-destination ~"
        ],
        "parallel": false
      }
    },
    "bump-and-publish": {
      "executor": "workspace-tools:bump-and-publish",
      "options": {
        "packageJson": "/dist/watt/package.json"
      }
    }
  },
  "tags": ["product:watt"]
}
